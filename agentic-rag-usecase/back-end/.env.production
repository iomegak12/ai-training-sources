# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Agentic RAG REST API
# ========================================
# 
# IMPORTANT: This is a template for production deployment
# - Copy this file to .env in your production environment
# - Fill in all required values (especially OPENAI_API_KEY)
# - Never commit .env files with real credentials to git
# 

# ========================================
# OPENAI API (REQUIRED)
# ========================================
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========================================
# API SERVER CONFIGURATION
# ========================================
API_HOST=0.0.0.0
API_PORT=9080
API_ENV=production
API_RELOAD=false
API_WORKERS=4

# ========================================
# SECURITY & RATE LIMITING
# ========================================
# Enable rate limiting in production
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ENABLED=true
# Add your frontend domain(s) - comma-separated
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# ========================================
# DOCUMENTATION
# ========================================
# Disable API docs in production for security
DOCS_ENABLED=false
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/agentic_rag_api.log
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5

# ========================================
# DATABASE CONFIGURATION
# ========================================
CRM_DATABASE_URL=sqlite:///db/crm.db
CHINOOK_DATABASE_URL=sqlite:///db/chinook.db

# CRM Sample Data
CRM_SAMPLE_RECORDS=25

# ========================================
# AGENT CONFIGURATION
# ========================================
AGENT_MODEL_NAME=gpt-4o
AGENT_TEMPERATURE=0.0
AGENT_MAX_TOKENS=4096
AGENT_SYSTEM_MESSAGE=You are a helpful AI assistant with access to multiple tools including web search, databases, and knowledge bases. Use tools when needed to provide accurate, well-researched answers.

# ========================================
# SQL AGENT CONFIGURATION
# ========================================
SQL_MODEL_NAME=gpt-4o-mini
SQL_TEMPERATURE=0.0
SQL_MAX_TOKENS=2048
SQL_TOP_K=10
SQL_SAMPLE_ROWS=3

# ========================================
# SEARCH TOOLS
# ========================================
WIKIPEDIA_ENABLED=true
WIKIPEDIA_TOP_K=3
ARXIV_ENABLED=true
ARXIV_TOP_K=3
DUCKDUCKGO_ENABLED=true
DUCKDUCKGO_MAX_RESULTS=5

# ========================================
# FAISS CONFIGURATION
# ========================================
FAISS_ENABLED=true
FAISS_TOOL_NAME=langsmith_search
FAISS_TOOL_DESCRIPTION=Search LangSmith documentation for information about tracing, monitoring, and debugging LLM applications.
FAISS_CHUNK_SIZE=1000
FAISS_CHUNK_OVERLAP=200
FAISS_TOP_K=4
FAISS_URLS_LIST=

# ========================================
# PERFORMANCE & OPTIMIZATION
# ========================================
# LangSmith tracing (optional - for monitoring)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=agentic-rag-api
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
# LANGCHAIN_API_KEY=your_langsmith_api_key_here

# ========================================
# HEALTH CHECK
# ========================================
# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=5
